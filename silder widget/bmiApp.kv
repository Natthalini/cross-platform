<Scr_Knowledge>:
    name:'Scr_Knowledge'
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: "47.jpg"
        Button:
            text:"คำนวณ"
            font_name:"tahoma" 
            color: 'yellow'
            on_press:app.root.current='Scr_bmi'
            pos_hint:{'center_x' : 0.5,'center_y':0.5} #ปรับขยับชิดซ้ายขวา กลาง เรื่อยๆ 
            size_hint:0.25,0.10
            background_color:[1,0,0,1]
